<% include ../partials/header %>

<h2>I wish for . . .</h2>

<div class="ui segment">
	<form class="ui form" action="/wishlist/<%= wish._id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Item</label>
			<input type="text" name="wish[name]" value="<%= wish.name %>" required autocomplete="off">
		</div>
		<div class="field">
			<label>Description</label>
			<input type="text" name="wish[description]" value="<%= wish.description %>" autocomplete="off">
		</div>
		<div class="field">
			<label>Image URL</label>
			<input type="text" name="wish[image]" value="<%= wish.image %>">
		</div>
		<div class="field">
			<label>Link</label>
			<input type="text" name="wish[link]" value="<%= wish.link %>">
		</div>
		<button class="ui teal button" type="submit">Submit</button>
	</form>
</div>

<% include ../partials/footer %>